block mixins
    include ../mixins/mixins
block vars
    - title = ''
    - menu_active = ''
    - wrapper_class = ''
    - wrapper_id = ''
    - home_slider = true
    - banner_top = false
    - banner_image = ''
    - login = false

doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title=title
        link(rel="shortcut icon" href="favicon.png")
        link(href="css/library.min.css" rel="stylesheet")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    body
        .preloader
            .preloader-in: img(src="css/skin/logo.png" alt="Loading...")
        .wrapper(class=wrapper_class id=wrapper_id)
            block header
                include ../layer/header 
            block menu
                include ../layer/menu 
            block mainer
                //- content here
            block footer
                include ../layer/footer 
            //- dock mobile
            #dockCalc
            nav.dock-mobile#dockMobile
                ul.menu-dock 
                    li
                        a(href="products.html")
                            span.bi.bi-grid 
                            .text Sản phẩm 
                    li
                        a(href="promotions.html")
                            span.bi.bi-percent 
                            .text Khuyến mãi
                    li
                        a(href="cart.html")
                            span.bi.bi-cart2: span.qty 5
                            .text Giỏ hàng 
                    li
                        a(href="user.html")
                            span.bi.bi-person 
                            .text Tài khoản  
                
        button#backtop.far.fa-chevron-up(role="button")
        block js 
            include ../layer/js 